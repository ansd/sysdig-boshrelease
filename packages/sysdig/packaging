set -ex

pushd github.com/draios/sysdig

curl -s https://s3.amazonaws.com/download.draios.com/DRAIOS-GPG-KEY.public | apt-key add -
curl -s -o /etc/apt/sources.list.d/draios.list https://s3.amazonaws.com/download.draios.com/stable/deb/draios.list
apt-get update
apt-get -qq -y install libelf-dev < /dev/null
apt-get -qq -y install linux-headers-$(uname -r) < /dev/null

mkdir build
cd build
cmake -DCMAKE_INSTALL_PREFIX=${BOSH_INSTALL_TARGET} ..
make
make install
make install_driver

popd
